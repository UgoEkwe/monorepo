{
  "name": "@modular-ai-scaffold/cli",
  "version": "1.0.0",
  "description": "Interactive CLI for project management, initialization, and deployment",
  "main": "dist/index.js",
  "bin": {
    "modular-ai": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsc -w",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "validate": "npm run lint && npm run type-check",
    "validate:deps": "node ../../scripts/validate-deps.js cli"
  },
  "dependencies": {},
  "peerDependencies": {
    "commander": "^11.0.0",
    "inquirer": "^9.2.0",
    "dotenv": "^16.0.0",
    "chalk": "^4.1.0",
    "ora": "^5.4.0"
  },
  "peerDependenciesMeta": {
    "commander": {
      "optional": true
    },
    "inquirer": {
      "optional": true
    },
    "dotenv": {
      "optional": true
    },
    "chalk": {
      "optional": true
    },
    "ora": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/inquirer": "^9.0.0",
    "@types/commander": "^2.12.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "cli",
    "scaffold",
    "ai",
    "monorepo",
    "template"
  ],
  "author": "Modular AI Scaffold",
  "license": "MIT"
}
