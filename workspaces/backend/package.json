{
  "name": "@modular-ai-scaffold/backend",
  "version": "1.0.0",
  "description": "FastAPI backend with entity management and AI integration",
  "scripts": {
    "dev": "python3 main.py",
    "build": "echo 'Python backend - no build step required'",
    "start": "python3 main.py",
    "install:python": "python3 -m pip install -r requirements.txt",
    "install:js": "npm install",
    "generate": "prisma generate",
    "deploy": "modal deploy modal_app.py",
    "deploy:dev": "modal serve modal_app.py",
    "test": "python3 -m pytest tests/ -v && vitest run",
    "test:python": "python3 -m pytest tests/ -v",
    "test:js": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "python3 -m pytest tests/ --cov=. && vitest run --coverage",
    "validate": "npm run lint && npm run format",
    "validate:deps": "node ../../scripts/validate-deps.js backend",
    "lint": "python3 -m flake8 .",
    "format": "python3 -m black .",
    "clean": "find . -type d -name __pycache__ -exec rm -rf {} + || true",
    "validate:env": "python3 -c \"import os; print('DATABASE_URL:', bool(os.getenv('DATABASE_URL'))); print('ENABLE_PRISMA:', os.getenv('ENABLE_PRISMA', 'true'))\""
  },
  "dependencies": {
    "prisma": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "optionalDependencies": {
    "@prisma/client": "^5.22.0"
  },
  "keywords": [
    "fastapi",
    "backend",
    "api",
    "ai",
    "prisma",
    "modal"
  ],
  "author": "Modular AI Scaffold",
  "license": "MIT"
}