{
  "name": "@modular-ai-scaffold/payments",
  "version": "1.0.0",
  "description": "Stripe payments integration with webhook handling",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest run",
