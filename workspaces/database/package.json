{
  "name": "@modular-ai-scaffold/database",
  "version": "1.0.0",
  "description": "Database layer with Prisma ORM and abstract schema",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run schema:generate && tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "schema:generate": "node scripts/generate-schema.js",
    "db:generate": "npm run schema:generate && prisma generate",
    "db:migrate": "npm run schema:generate && prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force",
    "db:deploy": "npm run schema:generate && prisma migrate deploy",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "validate": "echo 'No lint configured for database workspace'",
    "validate:deps": "node ../../scripts/validate-deps.js database"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "prisma": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "tsx": "^3.12.0",
    "typescript": "^5.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
