{
  "name": "@modular-ai-scaffold/core",
  "version": "1.0.0",
  "description": "Core shared utilities, types, and configurations for the modular AI scaffold",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "validate": "npm run lint && npm run type-check",
    "validate:deps": "node ../../scripts/validate-deps.js core"
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "typesVersions": {
    "*": {
      "utils": [
        "dist/utils/index.d.ts"
      ],
      "utils/*": [
        "dist/utils/*.d.ts"
      ],
      "configs": [
        "dist/configs/index.d.ts"
      ],
      "configs/*": [
        "dist/configs/*.d.ts"
      ],
      "types": [
        "dist/types/index.d.ts"
      ],
      "types/*": [
        "dist/types/*.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/types/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    },
    "./utils/*": {
      "types": "./dist/utils/*.d.ts",
      "default": "./dist/utils/*.js"
    },
    "./configs": {
      "types": "./dist/configs/index.d.ts",
      "default": "./dist/configs/index.js"
    }
  }
}