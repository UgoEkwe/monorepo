{
  "name": "modular-ai-scaffold",
  "version": "1.0.0",
  "description": "A comprehensive, generic monorepo starter template with modular AI agents and multiple frontend options",
  "private": true,
  "workspaces": [
    "workspaces/ai",
    "workspaces/backend",
    "workspaces/cli",
    "workspaces/core",
    "workspaces/database",
    "workspaces/mobile",
    "workspaces/payments",
    "workspaces/web"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "validate": "turbo run validate",
    "validate:deps": "node scripts/validate-deps.js",
    "validate:env": "node scripts/validate-workspace-env.js",
    "validate:env:web": "node scripts/validate-workspace-env.js web",
    "validate:env:mobile": "node scripts/validate-workspace-env.js mobile",
    "validate:env:backend": "node scripts/validate-workspace-env.js backend",
    "validate:env:ai": "node scripts/validate-workspace-env.js ai",
    "validate:env:payments": "node scripts/validate-workspace-env.js payments",
    "benchmark": "node scripts/benchmark.js",
    "benchmark:build": "node scripts/benchmark.js --skip-test --skip-cache",
    "benchmark:test": "node scripts/benchmark.js --skip-build --skip-cache",
    "benchmark:cache": "node scripts/benchmark.js --skip-build --skip-test",
    "monitor:memory": "node scripts/memory-monitor.js",
    "monitor:memory:benchmark": "node scripts/memory-monitor.js --benchmark",
    "report:automated": "node scripts/automated-reporting.js",
    "deploy": "turbo run deploy",
    "clean": "turbo run clean",
    "db:generate": "turbo run db:generate --filter=database",
    "db:migrate": "turbo run db:migrate --filter=database",
    "db:seed": "turbo run db:seed --filter=database",
    "db:studio": "turbo run db:studio --filter=database",
    "setup": "npm install && npm run db:generate && npm run db:migrate && npm run db:seed",
    "inject:project": "node scripts/inject-into-project.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "turbo": "^1.10.0",
    "typescript": "^5.0.0"
  },
  "overrides": {
    "react-test-renderer": "18.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/modular-ai-scaffold.git"
  },
  "keywords": [
    "monorepo",
    "ai",
    "scaffold",
    "template",
    "turborepo",
    "nextjs",
    "react-native",
    "fastapi",
    "prisma"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^10.4.21"
  }
}
